	<bean id="config"
		class="org.springframework.beans.factory.config.PropertiesFactoryBean">
		<property name="locations">
			<list>
				<value>classpath:comun/properties/batch.properties</value>
				<value>classpath:comun/properties/config.properties</value>
				<value>classpath:comun/properties/etir-local.properties</value>
			</list>
		</property>
